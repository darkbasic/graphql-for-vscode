{
  "name": "graphql-for-vscode",
  "displayName": "GraphQL for VSCode",
  "version": "1.0.0",
  "description": "GraphQL syntax highlighting, linting, auto-complete, and more!",
  "author": {
    "name": "Kumar Harsh",
    "email": "khs@playlyfe.com",
    "url": "https://github.com/kumarharsh"
  },
  "keywords": [
    "multi-root ready",
    "vscode",
    "visual studio code",
    "graphql",
    "linter"
  ],
  "publisher": "kumar-harsh",
  "engines": {
    "vscode": "^1.30.0"
  },
  "license": "MIT",
  "contributors": [
    {
      "name": "Mayank Agarwal (@Mayank1791989)",
      "url": "https://github.com/Mayank1791989",
      "email": "mayank@playlyfe.com"
    }
  ],
  "categories": [
    "Languages",
    "Linters",
    "Snippets"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/kumarharsh/graphql-for-vscode.git"
  },
  "bugs": {
    "url": "https://github.com/kumarharsh/graphql-for-vscode/issues"
  },
  "homepage": "https://github.com/kumarharsh/graphql-for-vscode/blob/master/README.md",
  "icon": "images/logo.png",
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Graphql Configuration",
      "properties": {
        "graphqlForVSCode.gqlPath": {
          "type": "string",
          "description": "Path to @playlyfe/gql module. (relative path is resolved w.r.t. workspace folder)",
          "default": ".",
          "scope": "resource"
        },
        "graphqlForVSCode.configDir": {
          "type": "string",
          "description": "Path to directory containing config file. (relative path is resolved w.r.t. workspace folder)",
          "default": ".",
          "scope": "resource"
        },
        "graphqlForVSCode.watchman": {
          "type": "boolean",
          "default": true,
          "description": "use fb-watchman to watch files if available.",
          "scope": "window"
        },
        "graphqlForVSCode.autoDownloadGQL": {
          "type": "boolean",
          "default": true,
          "description": "auto download @playlyfe/gql if not found.",
          "scope": "resource"
        },
        "graphqlForVSCode.loglevel": {
          "type": "string",
          "default": "info",
          "enum": [
            "debug",
            "info",
            "error",
            "off"
          ],
          "description": "log level.",
          "scope": "resource"
        }
      }
    },
    "languages": [
      {
        "id": "graphql",
        "extensions": [
          ".gql",
          ".graphql",
          ".graphqls"
        ],
        "aliases": [
          "GraphQL"
        ],
        "configuration": "./syntaxes/language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "graphql",
        "scopeName": "source.graphql",
        "path": "./syntaxes/graphql.json"
      },
      {
        "injectTo": [
          "source.js",
          "source.ts",
          "source.js.jsx",
          "source.tsx",
          "source.vue"
        ],
        "scopeName": "inline.graphql",
        "path": "./syntaxes/graphql.js.json",
        "embeddedLanguages": {
          "meta.embedded.block.graphql": "graphql"
        }
      },
      {
        "injectTo": [
          "source.ruby"
        ],
        "scopeName": "inline.graphql.rb",
        "path": "./syntaxes/graphql.rb.json",
        "embeddedLanguages": {
          "meta.embedded.block.graphql": "graphql"
        }
      },
      {
        "injectTo": [
          "text.gherkin.feature"
        ],
        "scopeName": "text.gherkin.feature.graphql",
        "path": "./syntaxes/graphql.feature.json"
      }
    ],
    "snippets": [
      {
        "language": "graphql",
        "path": "./snippets/graphql.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn clean && yarn compile",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "clean": "rimraf out",
    "compile": "tsc -p src",
    "watch": "tsc -watch -p src",
    "dev": "yarn clean && yarn watch",
    "package": "vsce package",
    "commitmsg": "commitlint -e $GIT_PARAMS"
  },
  "devDependencies": {
    "@commitlint/cli": "^6.0.2",
    "@commitlint/config-conventional": "^6.0.2",
    "@semantic-release/changelog": "^2.0.1",
    "@semantic-release/git": "^4.0.2",
    "@types/node": "^9.3.0",
    "husky": "^0.14.3",
    "prettier": "1.12.1",
    "rimraf": "^2.6.2",
    "semantic-release": "^15.1.8",
    "semantic-release-vsce": "^2.0.0",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "1.12.0",
    "typescript": "^2.8.1",
    "vscode": "^1.1.33"
  },
  "dependencies": {
    "vscode-languageclient": "5.2.1"
  },
  "galleryBanner": {
    "color": "#2e2348",
    "theme": "dark"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
